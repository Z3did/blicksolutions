{%- if section.blocks.size > 0 -%}
  <div class="section-{{ section.id }}-padding">
    <div class="bs-benefits--container page-width">
      {%- assign benefits = section.blocks | where: 'type', 'benefit' -%}
      {%- for block in benefits -%}
        <div class="bs-benefits--item">
          {%- if block.settings.icon != null -%}
            {{
              block.settings.icon
              | image_url: width: 75
              | image_tag:
                sizes: '(max-width: 599px) 48px, 60px',
                widths: '50, 75, 100, 150, 200, 240',
                loading: 'lazy',
                decoding: 'async'
            }}
          {%- endif -%}

          <div class="bs-benefits--copy">
            {%- if block.settings.title != blank -%}
              <strong>{{- block.settings.title -}}</strong>
            {%- endif -%}

            {%- if block.settings.copy != blank -%}
              <div>{{- block.settings.copy -}}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>

  {{ 'bs-benefits.css' | asset_url | stylesheet_tag }}
  {%- style -%}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
        .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        }
    }
  {%- endstyle -%}
{%- endif -%}

{% schema %}
{
  "name": "Benefits",
  "tag": "div",
  "class": "bs-benefits",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Vorteil",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon w√§hlen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titel"
        },
        {
          "type": "text",
          "id": "copy",
          "label": "Beschreibung"
        }
      ]
    }
  ]
}
{% endschema %}
